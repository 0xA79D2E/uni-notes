---
panel: true
---

<!doctype html>
<html lang="{{ app.lang }}" data-theme="system"> 
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content="{{ app.description }}">
    <title>{{ title or page.fileSlug }} | {{course}} </title>
    <meta name="generator" content="{{ eleventy.generator }}">
    <link rel="stylesheet" href="/app.{{ app.theme.color }}.css">
    <link rel="icon" type="image/x-icon" href="https://media.discordapp.net/attachments/809610910556487700/1145484857909190696/2.png?ex=67ce15e8&is=67ccc468&hm=328db7d56fc515e860c59f9972d5ad396807630d6e916579220d48737c671fde">
    <!-- mathjax config similar to math.stackexchange -->
    <script type="text/x-mathjax-config">
      MathJax.Hub.Config({
        tex2jax: {
          inlineMath: [['$', '$']],
          processEscapes: true,
          skipTags: ['script', 'noscript', 'style', 'textarea', 'pre', 'code']
        },
        TeX: {
          extensions: ['mhchem.js']  // Add this line to include the mhchem extension
        }
      });
    </script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/mathjax/2.7.7/latest.js?config=TeX-MML-AM_CHTML" type="text/javascript"></script>

  </head>
  <body>
    <script>document.documentElement.setAttribute("data-theme", /"(\w+)"+/.exec(localStorage.getItem("theme"))?.[1] || "system")</script>
    <script>document.documentElement.classList.add("supports-js")</script>
    {% include 'shared/skip-link/skip-link.partial.njk' %}

    <div class="app-layout">
      {% include 'core/app-header.partial.njk' %}
      <div class="app-layout__wrapper">
        <div
          class="app-layout__sidebar"
          x-data="scrollContainer('app:sidebar')"
          x-bind="container"
          :data-open="$store.nav.open.toString()"
        >
          <div class="app-layout__sidebar-inner">
            {% include 'modules/sidebar/sidebar.partial.njk' %}
          </div>
        </div>
        <div>{{ content | safe }}</div>
      </div>
    </div>

    <script src="/app.js" data-base="{{ '/' | htmlBaseUrl }}"></script>

    <div aria-hidden="true" hidden>
      {{ 'hash' | icon({ id: 'icon-hash', width: null, height: null }) | safe }}
      {{ 'link' | icon({ id: 'icon-anchor-link', width: null, height: null }) | safe }}
      {{ 'copy' | icon({ id: 'icon-copy', width: null, height: null }) | safe }}
      {{ 'check' | icon({ id: 'icon-check', width: null, height: null }) | safe }}
    </div>
  </body>
</html>
